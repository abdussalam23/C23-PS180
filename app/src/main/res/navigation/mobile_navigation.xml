<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.capstone.masaala.ui.home.HomeFragment"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_navigation_spice"
            app:destination="@id/navigation_spice" />
    </fragment>

    <fragment
        android:id="@+id/navigation_spice"
        android:name="com.capstone.masaala.ui.list.ListFragment"
        tools:layout="@layout/fragment_list" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.capstone.masaala.ui.settings.SettingsFragment"
        tools:layout="@layout/fragment_settings" />

</navigation>